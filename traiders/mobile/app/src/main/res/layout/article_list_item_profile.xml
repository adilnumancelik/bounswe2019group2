<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:orientation="horizontal"
    android:id="@+id/linearLayout_article">

    <include layout="@layout/article_list_item"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:id="@+id/imageView_editArticle"
        android:layout_marginStart="4dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_edit_24dp"/>

    <ImageView
        android:id="@+id/imageView_deleteArticle"
        android:layout_gravity="center"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_delete_24dp" />

</LinearLayout>