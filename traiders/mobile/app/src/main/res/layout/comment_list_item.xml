<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_comment_author"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold|italic"
            tools:text="Fatih Iver"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/primaryColor"/>

        <TextView
            android:id="@+id/textView_comment_createdAt"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:paddingVertical="4dp"
            android:textStyle="italic"
            android:layout_weight="1.5"
            android:gravity="center"
            tools:text="2 days ago"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/primaryColor"/>

        <TextView
            android:id="@+id/textView_comment_likeCount"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:gravity="center"
            tools:text="121 like"
            android:textStyle="italic"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="@color/primaryColor"/>

        <ImageView
            android:id="@+id/imageView_comment_like"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:scaleY="0.75"
            android:scaleX="0.75"
            android:src="@drawable/ic_thumb_up_gray_24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_comment_content"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingBottom="4dp"
        android:gravity="start"
        android:layout_height="wrap_content"
        tools:text="Hello World!"/>

    <TextView
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryColor"/>


</LinearLayout>